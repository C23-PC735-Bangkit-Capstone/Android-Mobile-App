<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TambakApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/status_green</item>
        <item name="colorPrimaryVariant">@color/grey_90</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cycleStatusColor">@color/status_green</item>
        <item name="cardColorPrimary">@color/grey_84</item>
        <item name="cardColorSecondary">@color/grey_90</item>
        <item name="textColorMain">@color/white</item>
        <item name="textColorAdditional">@color/grey</item>
    </style>
</resources>